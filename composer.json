{
  "name": "dotkernel/dot-doctrine-metadata",
  "type": "library",
  "description": "DotKernel wrapper that sits on top of mezzio-hal package and resolves the doctrine proxy issues.",
  "license": "MIT",
  "homepage": "https://github.com/dotkernel/dot-doctrine-metadata",
  "authors": [
    {
      "name": "DotKernel Team",
      "email": "team@dotkernel.com"
    }
  ],
  "keywords": [
    "dotkernel",
    "api",
    "metadata",
    "doctrine",
    "laminas",
    "mezzio",
    "doctrine-proxy",
    "doctrine-entities",
    "doctrine-metadata",
    "mezzio-hal"
  ],
  "require": {
    "php": "~8.1.0 || ~8.2.0",
    "mezzio/mezzio-hal": "^2.4.0",
    "doctrine/common": "^3.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.2",
    "laminas/laminas-coding-standard": "^2.5",
    "vimeo/psalm": "^5.13"
  },
  "autoload-dev": {
    "psr-4": {
      "DotTest\\DoctrineMetadata\\": "test/"
    }
  },
  "autoload": {
    "psr-4": {
      "Dot\\DoctrineMetadata\\": "src/"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
    "static-analysis": "psalm --shepherd --stats"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "sort-packages": true
  }
}
